    <div>
      <label for="add_ol">Add ordered lists? </label>
      <input type="text" id="add_ol" name="ol" placeholder="yes or empty" size="11">
    </div>

    <div>
      <label for="add_dl">Add description lists? </label>
      <input type="text" id="add_dl" name="dl" placeholder="yes or empty" size="11">
    </div>
    
    <div>
      <label for="add_bq">Add blockquotes? </label>
      <input type="text" id="add_bq" name="bq" placeholder="yes or empty" size="11">
    </div>

    <div>
      <label for="add_header">Add headers? </label>
      <input type="text" id="add_header" name="headers" placeholder="yes or empty" size="11">
