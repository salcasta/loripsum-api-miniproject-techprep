    <div>
      <label for="leng_para">Length of paragraphs: </label>
      <input type="text" id="leng_para" name="length" placeholder="short, medium, long, very long" size="26">
    </div>

    <div>
      <label for="markup">Add bold, italic and marked text? </label>
      <input type="text" id="markup" name="decorate" placeholder="yes or empty" size="11">
